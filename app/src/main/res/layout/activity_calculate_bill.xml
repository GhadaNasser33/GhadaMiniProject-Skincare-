<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#f2e9e1"
    tools:context=".CalculateBill">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#784841"
        android:textSize="18dp"
        android:textStyle="bold"
        android:fontFamily="@font/agbalumo"
        android:text="Calculate total amount of your Bill" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="match_parent"
        android:layout_height="203dp"
        app:srcCompat="@drawable/icon3" />

    <EditText
        android:id="@+id/ItemName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:textColor="#784841"
        android:textSize="18dp"
        android:textStyle="bold"
        android:fontFamily="@font/akaya_telivigala"
        android:hint="Enter your Item Name" />

    <Button
        android:id="@+id/calculate"
        android:layout_width="258dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/akaya_telivigala"
        android:text="Get item price"
        android:textSize="19dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/displayPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#784841"
        android:textSize="18dp"
        android:textStyle="bold"
        android:fontFamily="@font/akaya_telivigala"
        android:text="The price will be displayed here" />

    <Button
        android:id="@+id/BackToHomePage"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:text="Back To HomePage"
        android:fontFamily="@font/autour_one"
        android:textSize="19dp"
        android:textStyle="bold" />


</LinearLayout>