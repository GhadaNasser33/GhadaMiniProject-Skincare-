<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2e9e1"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".ProductItems">


    <ImageView
        android:id="@+id/productImage1"
        android:layout_width="139dp"
        android:layout_height="176dp"
        android:src="@drawable/s1" />

    <LinearLayout
        android:layout_width="252dp"

        android:layout_height="157dp"
        android:background="#E7DADA"
        android:orientation="horizontal"
        android:paddingLeft="8dp">

        <TextView
            android:id="@+id/ProductDetails1"
            android:layout_width="271dp"
            android:layout_height="156dp"
            android:fontFamily="@font/akaya_telivigala"
            android:text="ProductName: Soap
            ProductSize: 250ml
            ProductPrice: 4.0OMR
             Description: Therapeutic"
            android:textColor="@color/black"
            android:textSize="23dp"
            android:textStyle="italic" />

    </LinearLayout>

    <ImageView
        android:id="@+id/productImage2"
        android:layout_width="170dp"
        android:layout_height="128dp"
        android:src="@drawable/b1" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#E7DADA"
        android:orientation="horizontal"
        android:paddingLeft="8dp">

        <TextView
            android:id="@+id/ProductDetails2"
            android:layout_width="271dp"
            android:layout_height="match_parent"
            android:fontFamily="@font/akaya_telivigala"
            android:text=" ProductName: BodyButter
            ProductSize: 200ml
            ProductPrice: 4.0OMR
            Description: Moisturizing the skin"
            android:textColor="@color/black"
            android:textSize="23dp"
            android:textStyle="italic" />

    </LinearLayout>

    <Button
        android:id="@+id/BackToHomePage"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/autour_one"
        android:text="Back To HomePage"
        android:textSize="10dp"
        android:textStyle="bold" />


</LinearLayout>